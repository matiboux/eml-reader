---
import { site } from '~/config'
import Layout from '~/layouts/Layout.astro'
import AppModal from '~/components/AppModal.svelte'
import LocaleSwitch from '~/components/LocaleSwitch.astro'
import AppForm from '~/components/AppForm.svelte'
import AppContent from '~/components/AppContent.svelte'
import Footer from '~/components/Footer.astro'

import { i18nFactory } from '~/i18n'
const _ = i18nFactory(Astro.currentLocale as any)
---

<Layout
	bodyClass="bg-gray-100 h-screen"
>

	<AppModal locale={Astro.currentLocale} client:load />

	<div class="flex flex-col justify-center items-center min-h-full overflow-y gap-8 p-8 w-full max-w-[calc(1000px+2*2rem)] mx-auto">
		<div class="bg-white shadow-lg rounded-lg p-6 w-full space-y-4">
			<div class="flex items-start justify-between">
				<h1 class="text-4xl font-bold">
					{site.title}
				</h1>
				<LocaleSwitch />
			</div>
			{site.description &&
				<p class="text-gray-600">
					{_(site.description)}
				</p>
			}

			<AppForm class="home text-black group-hover:text-gray mt-4" locale={Astro.currentLocale} client:load />
		</div>

		<AppContent locale={Astro.currentLocale} client:load />

		<Footer class="w-full" />
	</div>

</Layout>
